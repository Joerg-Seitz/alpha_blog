<% if @article.errors.any? %>
<p2>Couldn't edit article for the following reasons.</p2>
<ul>
  <% @article.errors.full_messages.each do |msg|%>
  <li> <%= msg %></li>
  <% end %>
</ul>
<% end %>

<br>


<%= form_for @article do |f| %>
  <p id=title-area>
    <p3><%= f.label :title %> </p3><br>
    <%= f.text_area :title %>
  </p>
    <p id=description-area>
        <p3> <%= f.label :description %> </p3><br>
        <%= f.text_area :description %>
      </p>
    <br>

    <p> <%= f.submit %> </p>


  <% end %>
<br>
  <%= link_to "Back to the article list", articles_path%>
