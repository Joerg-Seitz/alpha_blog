<h1>create an article</h1>

<% if @article.errors.any? %>
<h2>Article couldn't get created for the following reasons.</h2>
<ul>
  <% @article.errors.full_messages.each do |msg|%>
  <li> <%= msg %></li>
  <% end %>
</ul>
<% end %>

<br>


<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
<br>

<p> <%= f.submit %> </p>

<br>
<% end %>
